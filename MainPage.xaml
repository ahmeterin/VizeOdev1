<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VizeOdev.MainPage"
             Background="#1F1F1F">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" BackgroundColor="White" Padding="10" Spacing="10">
                <Image Source="myimage.jpg" HeightRequest="100" WidthRequest="100" Aspect="AspectFill" HorizontalOptions="Center" />

                <Label Text="Ahmet Erin" FontSize="Large" TextColor="Black" HorizontalOptions="Center" />
                
            </StackLayout>

            <ScrollView Grid.Row="1">
                <StackLayout Padding="20" Spacing="15">
                    <Label Text="Bartın Üniversitesi &#10;Bilgisayar Mühendisliği" FontSize="Medium" HorizontalOptions="Center" />
                    <Label Text="Ödev-1" FontSize="Large" HorizontalOptions="Center" />

                </StackLayout>
                
            </ScrollView>
            
            
        </Grid>
    </ScrollView>
</ContentPage>